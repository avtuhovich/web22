= form_for @human do |f|
  - if @human.errors.any?
    #error_explanation
      %h2= "#{pluralize(@human.errors.count, "error")} prohibited this human from being saved:"
      %ul
        - @human.errors.full_messages.each do |message|
          %li= message

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :email
    = f.text_field :email
  .field
    = f.label :password
    = f.number_field :password
  .field
    = f.label :password_confirmation
    = f.number_field :password_confirmation
  .actions
    = f.submit 'Save'
