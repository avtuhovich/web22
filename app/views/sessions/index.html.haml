%div.flex.flex-col.m-auto{:class=>"w-2/5", "data-controller": "auth"}
  %div.flex.justify-between.text-center
    %button.btn-primary{:class=>"w-1/2", "data-action":"click->auth#menu", "data-auth-id-param":"login"}= t "login"
    %button.btn-primary{:class=>"w-1/2", "data-action":"click->auth#menu", "data-auth-id-param":"signup"}= t "signup"
  %div
    %div#alert{:class=>"p-4 mb-4 text-sm text-blue-700 bg-blue-100 rounded-lg dark:bg-blue-200 dark:text-blue-800 hidden", :role=>'alert'}

    %form#signup.hidden{"data-action":"auth#signup", "data-auth-url-param": sessions_new_path}
      %div{:class=>"grid gap-6 mb-6 lg:grid-cols-2"}
        %div
          %label{:for=>"name", :class=>"block mb-2 text-sm font-medium text-gray-900 dark:text-gray-300"}= t "name"
          %input#name(required){:name=>'name', :type=>"text", :class=>"bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500", :placeholder=>"John"}
        %div
          %label{:for=>"email", :class=>"block mb-2 text-sm font-medium text-gray-900 dark:text-gray-300"}= t "email"
          %input#email(required){:name=>'email', :type=>"text", :class=>"bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500", :placeholder=>"john.doe@company.com"}
      %div.mb-6
        %label{:for=>"pass", :class=>"block mb-2 text-sm font-medium text-gray-900 dark:text-gray-300"}= t "pass"
        %input#pass(required){:name=>'pass', :type=>"password", :class=>"bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500", :placeholder=>"•••••••••", :minlength=>6}
      %div.mb-6
        %label{:for=>"pass2", :class=>"block mb-2 text-sm font-medium text-gray-900 dark:text-gray-300"}= t "pass2"
        %input#pass2(required){:name=>'pass2', :type=>"password", :class=>"bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500", :placeholder=>"•••••••••", :minlength=>6}
      %button{:type=>"submit", :class=>"text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm w-full sm:w-auto px-5 py-2.5 text-center dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800"}= t "submit"
    %form#login.hidden{"data-action":"auth#login", "data-auth-url-param": sessions_create_path}
      %div.mb-6
        %label{:for=>"email", :class=>"block mb-2 text-sm font-medium text-gray-900 dark:text-gray-300"}= t "email"
        %input#email(required){:name=>'email', :type=>"text", :class=>"bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500", :placeholder=>"john.doe@company.com"}
      %div.mb-6
        %label{:for=>"pass", :class=>"block mb-2 text-sm font-medium text-gray-900 dark:text-gray-300"}= t "pass"
        %input#pass(required){:name=>'pass', :type=>"password", :class=>"bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500", :placeholder=>"•••••••••", :minlength=>6}
      %button{:type=>"submit", :class=>"text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm w-full sm:w-auto px-5 py-2.5 text-center dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800"}= t "submit"
